{
  "manifest_version": 3,
  "name": "Fleet demo mode",
  "description": "Enable demo mode on Cabify for fleets.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png"
    }
  },
  "permissions": ["scripting", "activeTab", "storage"]
}
